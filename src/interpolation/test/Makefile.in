
GTESTLIBS=-lgtest_main -lgtest
LIBNAME=../../../lib/libncpainterpolation.a ../../../lib/libncpacommon.a
LDFLAGS=@LDFLAGS@ $(LIBNAME) $(GTESTLIBS) @LIBS@
INCFLAGS=-I../include -I../../include
CXXFLAGS=-c -fPIC -ggdb $(INCFLAGS)

SOURCES=$(wildcard test_*.cpp)
OBJECTS=$(SOURCES:.cpp=.o)
TARGET=interpolationTest

test: build clean

build: $(OBJECTS)
	g++ -o $(TARGET) $^ $(LDFLAGS) && ./$(TARGET)
	
%.o: %.cpp
	${CXX} $^ $(CXXFLAGS) -o $@
	
clean:
	-rm $(OBJECTS) $(TARGET)
